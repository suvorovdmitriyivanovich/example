<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true" >
    <shape xmlns:android="http://schemas.android.com/apk/res/android">

        <solid
            android:color="#296397" >
        </solid>
        <stroke
            android:width="1dp"
            android:color="#333" >
        </stroke>
        <padding
            android:left="5dp"
            android:top="0dp"
            android:right="5dp"
            android:bottom="0dp"    >
        </padding>
        <corners
            android:radius="5dp"   >
        </corners>
    </shape>
</item>
