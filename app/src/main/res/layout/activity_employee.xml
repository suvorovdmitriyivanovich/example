<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_employee"
        android:id="@+id/toolbar" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="bottom">

                <ImageView
                    app:srcCompat="@drawable/user"
                    android:layout_marginBottom="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/user_ico" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="textCapSentences"
                    android:ems="10"
                    android:id="@+id/name"
                    android:hint="@string/hint_name" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:inputType="textCapSentences"
                    android:ems="10"
                    android:id="@+id/last_name"
                    android:hint="@string/hint_last_name" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="bottom">

                <ImageView
                    app:srcCompat="@drawable/date"
                    android:layout_marginBottom="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/birthday_ico" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:id="@+id/birthday"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/employee_name"
                    android:paddingLeft="5dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="bottom">

                <ImageView
                    app:srcCompat="@drawable/location"
                    android:layout_marginBottom="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/city_ico" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/city" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="bottom">

                <ImageView
                    app:srcCompat="@drawable/post"
                    android:layout_marginBottom="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/post_ico" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/post" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="match_parent"
                android:id="@+id/delete_button"
                android:background="@drawable/shape_delete_employee_button"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="@string/delete"
                android:layout_height="40dp"
                android:textSize="18sp"
                android:textColor="@android:color/white" />

            </LinearLayout>

        </LinearLayout>

</LinearLayout>
